<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/classifytext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_marginBottom="99dp"
        android:text="Developed by: Sheekar Banerjee"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic">

    </TextView>

    <TextView
        android:id="@+id/classifytext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_marginBottom="27dp"
        android:text="Click bellow to upload your Brain X-Ray"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@color/colorAccent"></ImageView>

    <Button
        android:id="@+id/classify"
        android:layout_width="312dp"
        android:layout_height="85dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="#E84C77F6"
        android:text="Predict with Artificial Intelligence"
        android:textColor="#FFFFFF"
        android:textStyle="bold"></Button>

</RelativeLayout>